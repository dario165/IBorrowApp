

@model IEnumerable<WebApplication2.Models.Item>

   <div class="row pt-4">
       <div class="row pt-4">
           <div class="col-6">
               <h2 class="text-primary">Borrowed Items List</h2>

           </div>
           <div class="col-6">
              <a asp-controller="Item" asp-action="Create" class="btn btn-primary">Create a new Item</a>
            </div>

       </div>
       

       @if (Model.Count() > 0)
       {
           <table class="table table-bordered table-striped" style="width: 100%">
           <thead>
               <tr>
                   <th>
                       Item Name 
                   </th>
                   <th>
                       Borrower
                   </th>
                   <th>
                       Lender
                   </th>
               </tr>
           </thead>
           <tbody>
               @foreach (var item in Model)
               {
                   <tr>
                       <td with="30%">@item.ItemName</td>
                       <td with="30%">@item.Borrower</td>
                       <td with="30%">@item.Lender</td>
                   </tr>
                   
               }
           </tbody>
           </table>
           
       }
       else
       {
          <p>No items created</p> 
       }
   </div> 